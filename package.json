{
  "name": "fmq",
  "version": "1.0.0",
  "author": "Freek Mencke",
  "homepage": "https://twitter.com/FreekMencke",
  "repository": {
    "type": "git",
    "url": "https://github.com/FreekMencke/fmq"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack --progress --env development --env nodemon",
    "start:prod": "webpack --progress --env nodemon",
    "start:ci": "node ./dist/fmq",
    "start:dev": "node --inspect ./dist/fmq",
    "build:ci": "webpack",
    "build:dev": "webpack --env development",
    "build:prod": "webpack --progress",
    "build:docker": "docker build --rm -t freekmencke/fmq:latest .",
    "deploy:docker": "sh ./scripts/deploy.sh",
    "analyse:dev": "webpack --progress --env development --env analyse && start dist/report.html",
    "analyse:prod": "webpack --progress --env analyse && start dist/report.html",
    "lint": "eslint . --ext .ts",
    "swagger": "nodemon -e ts,js ./scripts/swagger.js"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "express": "^4.18.1",
    "express-prom-bundle": "^6.5.0",
    "helmet": "^6.0.0",
    "mongodb": "^4.10.0",
    "prom-client": "^14.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/node": "^18.7.23",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "nodemon-webpack-plugin": "^4.8.1",
    "swagger-autogen": "^2.22.0",
    "swagger-ui-express": "^4.5.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
