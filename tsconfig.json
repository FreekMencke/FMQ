{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "lib": ["dom", "es2022"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
